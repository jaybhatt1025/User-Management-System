<!-- form handling -->
<form action="api/users" method="POST" id="add_user">

    <div class="container">

        <div class="col mb-3">
            <label for="name">Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="name" value="" class="form-control" placeholder="Jaykumar Bhatt" required>
        </div>

        <div class="col mb-3">
            <label for="email" >Email</label>
            
            <input type="email" name="email" value="" class="form-control" placeholder="example@gmail.com" required>
        </div>

        <div class="col mb-3">
            <label for="gender">Gender</label>
            <div class="form-check form-check-inline ms-2">
                <input class="form-check-input" type="radio" name="gender" value="Male">
                <label class="form-check-label" for="gender">Male</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="gender" value="Female">
                <label class="form-check-label" for="gender">Female</label>
            </div>
        </div>

        <div class="col mb-3">
            <label for="status">Status</label>
            <div class="form-check form-check-inline ms-2">
                <input class="form-check-input" type="radio" name="status" id="inlineRadio1" value="Active">
                <label class="form-check-label" for="Active">Active</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="status" id="inlineRadio2" value="Inactive">
                <label class="form-check-label" for="Inactive">Inactive</label>
            </div>
        </div>

        <div class="d-grid ">
            <button type="submit" class="btn bg-primary text-white">Save</button>
        </div>


    </div>
</form>
<!-- /form handling -->