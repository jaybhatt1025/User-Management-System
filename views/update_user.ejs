<!-- Header -->

<%- include('include/_header')%>

<!-- /Header -->

    <!-- Main -->
    <main class="main-site">

        <div class="container-xl">
            <div class="adduser">
                <a href="/">
                    <i class="fas fa-angle-double-left"></i> All Users
                </a>
            </div>

            <div class="user-frm">
                <h5 align="center">Update User</h5>
                <h6 class="mb-3" align="center">Use the Below form to update an account</h6>

                <!-- form handling -->
                <form method="POST" id="update_user">

                    <div class="container">
                
                        <div class="col mb-3">
                            <input type="hidden" name="id" value="<%= user._id %>">
                            <label for="name">Name</label>
                            <input type="text" name="name" value="<%= user.name %>" class="form-control" placeholder="Jaykumar Bhatt" required>
                        </div>
                
                        <div class="col mb-3">
                            <label for="email" >Email</label>
                            
                            <input type="email" name="email" value="<%= user.email %>" class="form-control" placeholder="example@gmail.com" required>
                        </div>
                
                        <div class="col mb-3">
                            <label for="gender">Gender</label>
                            <div class="form-check form-check-inline ms-2">
                                <input class="form-check-input" type="radio" name="gender" value="Male"<%= user.gender =='Male'?'checked':''%>>
                                <label class="form-check-label" for="gender">Male</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="gender" value="Female"<%= user.gender =='Female'?'checked':''%>>
                                <label class="form-check-label" for="gender">Female</label>
                            </div>
                        </div>
                
                        <div class="col mb-3">
                            <label for="status">Status</label>
                            <div class="form-check form-check-inline ms-2">
                                <input class="form-check-input" type="radio" name="status" id="inlineRadio1" value="Active"<%= user.status =='Active'?'checked':''%>>
                                <label class="form-check-label" for="Active">Active</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="status" id="inlineRadio2" value="Inactive"<%= user.status =='Inactive'?'checked':''%>>
                                <label class="form-check-label" for="Inactive">Inactive</label>
                            </div>
                        </div>
                
                        <div class="d-grid ">
                            <button type="submit" class="btn bg-primary text-white">Save</button>
                        </div>
                
                
                    </div>
                </form>
                <!-- /form handling -->

            </div>

        </div>

    </main>
    <!-- /Main -->



<%- include('include/_footer')%>